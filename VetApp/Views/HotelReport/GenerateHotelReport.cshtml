@model VetApp.Models.HotelConsumptionReportViewModel

@{
    ViewData["Title"] = "Generate Hotel Report";
}

<h1>Generate Hotel Report</h1>

<form asp-action="GenerateHotelReport" method="post">
    <div class="form-group">
        <label asp-for="FechaIngreso" class="control-label"></label>
        <input asp-for="FechaIngreso" class="form-control" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaSalida" class="control-label"></label>
        <input asp-for="FechaSalida" class="form-control" />
        <span asp-validation-for="FechaSalida" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdHospedaje" class="control-label"></label>
        <select asp-for="IdHospedaje" class="form-control" asp-items="ViewBag.Hospedajes"></select>
        <span asp-validation-for="IdHospedaje" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

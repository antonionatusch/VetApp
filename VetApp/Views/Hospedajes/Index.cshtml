@model IEnumerable<VetApp.Models.Hospedaje>

@{
    ViewData["Title"] = "Lista de Hospedajes";
}

<h1>Lista de Hospedajes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdHospedaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodMascotaNavigation.CodMascota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdHospedaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodMascotaNavigation.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdHospedaje, codMascota = item.CodMascota }) 
                    
                </td>
            </tr>
        }
    </tbody>
</table>

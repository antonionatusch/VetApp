@model IEnumerable<VetApp.Models.RegistrarBanoExtraViewModel>

@{
    ViewData["Title"] = "Baños Registrados";
}

<h1>Baños Registrados</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID del Hospedaje</th>
            <th>Cantidad de Baños</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdHospedaje</td>
                <td>@item.CantidadBanos</td>
                <td>
                    <a asp-action="RegistrarBano" asp-route-id="@item.IdHospedaje" class="btn btn-primary">Registrar Baño</a>
                </td>
            </tr>
        }
    </tbody>
</table>

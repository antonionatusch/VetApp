</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodCliente" class="btn btn-primary custom-edit-btn">Editar</a>
    <a asp-action="Index" class="btn btn-secondary custom-back-btn">Regresar a la Lista</a>
</div>

@section Scripts {

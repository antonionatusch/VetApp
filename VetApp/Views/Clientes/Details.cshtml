@model VetApp.Models.Cliente

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>

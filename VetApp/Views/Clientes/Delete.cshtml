@model VetApp.Models.Cliente

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <td>@Html.DisplayFor(model => model.Apellido)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CuentaBanco)</th>
            <td>@Html.DisplayFor(model => model.CuentaBanco)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Banco)</th>
            <td>@Html.DisplayFor(model => model.Banco)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <td>@Html.DisplayFor(model => model.Direccion)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <td>@Html.DisplayFor(model => model.Telefono)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Correo)</th>
            <td>@Html.DisplayFor(model => model.Correo)</td>
        </tr>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="CodCliente" />
        <div class="form-group">
            <input type="submit" value="Borrar" class="btn btn-danger custom-delete-btn" />
            <a asp-action="Index" class="btn btn-secondary custom-back-btn">Regresar a la Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .custom-delete-btn {
        background-color: #dc3545; /* Rojo */
        border-color: #dc3545;
        color: white;
        margin-right: 5px;
    }

    .custom-back-btn {
        background-color: #6c757d; /* Gris */
        border-color: #6c757d;
        color: white;
        margin-top: 10px;
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.875em;
    }

    .table {
        margin-top: 20px;
    }
</style>

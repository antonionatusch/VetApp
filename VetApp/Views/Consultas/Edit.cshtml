@using VetApp.Models
@model Consulta

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Consulta</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodMascota" />
            <input type="hidden" asp-for="FechaConsulta" />
            <table class="table table-bordered">
                <tr>
                    <th><label asp-for="Motivo" class="control-label"></label></th>
                    <td>
                        <input asp-for="Motivo" class="form-control" />
                        <span asp-validation-for="Motivo" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="Diagnostico" class="control-label"></label></th>
                    <td>
                        <input asp-for="Diagnostico" class="form-control" />
                        <span asp-validation-for="Diagnostico" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="Tratamiento" class="control-label"></label></th>
                    <td>
                        <input asp-for="Tratamiento" class="form-control" />
                        <span asp-validation-for="Tratamiento" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th><label asp-for="Medicacion" class="control-label"></label></th>
                    <td>
                        <input asp-for="Medicacion" class="form-control" />
                        <span asp-validation-for="Medicacion" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-right">
                        <input type="submit" value="Guardar" class="btn btn-primary custom-save-btn" />
                        <a asp-action="Index" class="btn btn-secondary custom-back-btn">Regresar a la Lista</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .custom-save-btn {
        background-color: #007bff; /* Azul */
        border-color: #007bff;
        color: white;
        margin-right: 5px;
    }

    .custom-back-btn {
        background-color: #6c757d; /* Gris */
        border-color: #6c757d;
        color: white;
    }

    .btn {
        border-radius: 5px;
        padding: 10px 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.875em;
    }

    .table {
        margin-top: 20px;
    }
</style>
